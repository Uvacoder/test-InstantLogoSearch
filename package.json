{
  "name": "base-express-saiichihashimoto",
  "version": "1.0.0",
  "description": "Base Express Setup for @saiichihashimoto's projects",
  "main": "server.js",
  "browser": "client.js",
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = 'production' ]; then foreman start; else foreman start -f Procfile.dev; fi",
    "node": "babel-node $npm_package_main",
    "jsify": "mkdir -p dist/js && browserify $npm_package_browser --verbose --extension=.jsx | uglifyjs -c drop_console,warnings=false -o dist/js/main.js",
    "postcss": "mkdir -p dist/css && postcss -c postcss.js -o dist/css/main.css main.css",
    "nodemon": "nodemon --exec babel-node --ignore dist/ -e js,jsx -- $npm_package_main",
    "watchify": "mkdir -p dist/js && watchify $npm_package_browser --verbose --extension=.jsx -o dist/js/main.js",
    "postcss:watch": "npm run postcss -- -w",
    "test": "npm run stylelint && npm run eslint",
    "eslint": "eslint . --ignore-path .gitignore",
    "stylelint": "stylelint '**/*.css' '!dist/**' '!node_modules/**'",
    "clean": "rm -rf dist",
    "discify": "browserify $npm_package_browser --full-paths --extension=.jsx | uglifyjs -c drop_console,warnings=false | discify -O"
  },
  "author": "@saiichihashimoto",
  "license": "ISC",
  "devDependencies": {
    "disc": "^1.3.2",
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.9.1",
    "eslint-plugin-react": "^3.13.1",
    "nodemon": "^1.8.1",
    "postcss-reporter": "^1.3.0",
    "pre-commit": "^1.1.2",
    "stylelint": "^3.1.4",
    "stylelint-config-suitcss": "^2.0.0",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "autoprefixer": "^6.2.2",
    "babel-cli": "^6.3.17",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "body-parser": "^1.14.2",
    "browserify": "^12.0.1",
    "cssnano": "^3.4.0",
    "feathers": "^1.3.0",
    "feathers-memory": "^0.5.1",
    "jade": "^1.11.0",
    "postcss-cachebuster": "^0.1.2",
    "postcss-cli": "^2.3.2",
    "postcss-color-rgba-fallback": "^2.0.0",
    "postcss-custom-media": "^5.0.0",
    "postcss-import": "^7.1.3",
    "postcss-nested": "^1.0.0",
    "postcss-url": "^5.0.2",
    "react": "^0.14.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.6",
    "redux": "^3.0.5",
    "uglify-js": "^2.6.1",
    "uglifyify": "^3.0.1",
    "underscore": "^1.8.3"
  },
  "browserify": {
    "extension": [
      "jsx"
    ],
    "transform": [
      "babelify",
      "uglifyify"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-suitcss",
      "./.stylelintrc"
    ]
  }
}
