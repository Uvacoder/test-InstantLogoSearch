{
  "name": "base-express-saiichihashimoto",
  "version": "1.0.0",
  "description": "Base Express Setup for @saiichihashimoto's projects",
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = 'production' ]; then foreman start; else foreman start -f Procfile.dev; fi",
    "node": "node server.js",
    "browserify": "mkdir -p dist/js && browserify client.js -o dist/js/main.js",
    "nodemon": "nodemon server.js --ignore dist/",
    "watchify": "mkdir -p dist/js && watchify client.js -w -o dist/js/main.js",
    "test": "npm run stylelint && npm run eslint",
    "eslint": "eslint . --ignore-path .gitignore",
    "stylelint": "stylelint **/*.css"
  },
  "author": "@saiichihashimoto",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^1.10.3",
    "eslint-config-xo": "^0.9.1",
    "nodemon": "^1.8.1",
    "pre-commit": "^1.1.2",
    "stylelint": "^3.1.4",
    "stylelint-config-suitcss": "^2.0.0",
    "watchify": "^3.6.1"
  },
  "dependencies": {
    "body-parser": "^1.14.2",
    "browserify": "^12.0.1",
    "feathers": "^1.3.0"
  },
  "stylelint": {
    "ignoreFiles": [
      "dist/**",
      "node_modules/**"
    ],
    "extends": [
      "stylelint-config-suitcss",
      "./.stylelintrc"
    ]
  }
}
